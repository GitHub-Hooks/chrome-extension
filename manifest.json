{
  "manifest_version": 2,
  "name": "GitHub UI Hooks",
  "version": "2.0.0",
  "description": "Chrome extension that runs hooks within GitHubâ€™s web app",
  "icons": {
    "16": "./icons/logomark-16.png",
    "48": "./icons/logomark-48.png",
    "128": "./icons/logomark-128.png"
  },
  "browser_action": {
    "default_icon": {
      "16": "./icons/logomark-16.png",
      "48": "./icons/logomark-48.png",
      "128": "./icons/logomark-128.png"
    }
  },
  "background": {
    "scripts": ["./public/background/index.js"],
    "persistent": false
  },
  "permissions": [
    "activeTab",
    "storage",
    "tabs",
    "https://github.com/*"
  ],
  "content_scripts": [{
    "matches": ["https://github.com/github-ui-hooks/readme/wiki/success"],
    "js": ["./public/content_scripts/oauth-callback.js"]
  }, {
    "matches": ["https://github.com/*/*/compare/*?expand=1"],
    "js": ["./public/content_scripts/pull-request-compare.js"]
  }]
}
